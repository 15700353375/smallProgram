/* packageA/pages/components/room/room.wxss */
@import '../../../../styles/icon.wxss';
.container{
  width: 100%;
  height: 100%;
  overflow-y: auto;
}

.clearfix::after {
  content: ".";
  clear: both;
  display: block;
  overflow: hidden;
  font-size: 0;
  height: 0;
}
.clearfix {
  zoom: 1;
}

.select-main{
  height: 64rpx;
  width: 100%;
  z-index: 9999;
  position: relative;
}
.select{
  width: 50%;
  float: left;
}

.list-main{
  width: 100%;
  height: auto;
}

.list-item{
  width: calc((100% - 120rpx) /3);
  height: 280rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 2rpx 2rpx #ddd;
  box-sizing: border-box;
  float: left;
  margin-top: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.list-item:first-child{
  margin-left: 30rpx;
}
.list-item:nth-of-type(3n+0){
  margin-right: 30rpx;
}
.list-item:nth-of-type(2n+0){
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.list-item-top{
  height: 50rpx;
  width: 100%;
  background: #50add8;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  font-size: 26rpx;
}

.list-item-bottom{
  height: 40rpx;
  width: 100%;
  background: #50add8;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 22rpx;
}

.list-item-content{
  flex: 1;
  position: relative;
  width: 100%;
  background: #fff;
}

.list-item-content .center{
  width: 180rpx;
  height: 70rpx;
  margin: 0 auto;
  margin-top: 60rpx;
  border-radius: 30rpx;
  border: 4rpx solid #ea7058;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #ea7058;
}

.list-item-content .center.warning{
  border: 4rpx solid #ea7058;
  color: #ea7058;
}

.list-item-content .center.success{
  border: 4rpx solid #58cd48;
  color: #58cd48;
}


.list-item-message{
  position: absolute;
  top: 0;
  height: 36rpx;
  width: 100%;
  color: #fff;
  font-size: 20rpx;
  line-height: 36rpx;
}
.list-item-message .iconfont{
  font-size: 20rpx;
  margin-left: 12rpx;
}

.list-item-message .no{
  margin-right: 12rpx;
  margin-left: 10rpx;
}

.list-item-message .timer{
  margin-left: 10rpx;
}

.list-item-message.error{
  background: #ff2a22;
}

.list-item-message.success{
  background: #5bd0b5;
}
.list-item-message.info{
  background: #565455;
}


.mask{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
}
.mask-opacity{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
  width: 100%;
  height: 100%;
  background: #333;
  opacity: 0.7;
}

.mask-text{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  color: #fff;
  width: 100%;
  height: 100%;
  line-height: 200rpx;
  text-align: center;
  font-size: 36rpx;
}

.mask-text text{
  font-size: 24rpx;
}
