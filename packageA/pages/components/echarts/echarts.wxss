.container-statistical{
  width: 100%;
  height: 100%;
  overflow-y: auto;
  margin-top: 80rpx;
  margin-bottom: 120rpx;
}
.statistical-title{
  height: 68rpx;
  padding: 16rpx 30rpx;
  box-sizing: border-box;  
  border-bottom: 2rpx solid #ddd;
  position: relative;
  background: #fff;  
}
.statistical-title:before{
  content: '';
  position: absolute;  
  display: block;
  width: 10rpx;
  height: 28rpx;  
  top: 18rpx;
  background: #3a98cc;
}

.statistical-title .text-title{
  font-size: 28rpx;
  line-height: 30rpx;
  color: #000;
  float: left;
  margin-left: 30rpx;
}
.text-right{
  float: right;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #999999;
}

.bg-color-gray{
  background: #f1f1f1;
}

.bg-color-white{
  background: #fff;
}
.list-block-main{
  margin-bottom: 20rpx;
}
.list-block{
  width: 25%;
  height: 90rpx;
  border-right:  2rpx solid #eee;
  border-bottom: 2rpx solid #eee;
  float: left;
  box-sizing: border-box;
  text-align: center;
}

.list-block-label{
  color: #b1b1b1;
  line-height: 42rpx;
  font-size: 24rpx;
}
.list-block-value{
  color: #db6734;
  line-height: 42rpx;
  font-size: 24rpx;
}
.list-block-total{
  padding: 20rpx;
  box-sizing: border-box;
  color: #b1b1b1;
  line-height: 60rpx;
  font-size: 24rpx;
  border-bottom: 2rpx solid #eee;
}

.list-block-total .total-value{
  float: right;
  color: #db6734;
  line-height: 60rpx;
  font-size: 24rpx;
}

.clearfix::after {
  content: ".";
  clear: both;
  display: block;
  overflow: hidden;
  font-size: 0;
  height: 0;
}
.clearfix {
  zoom: 1;
}

.oper-block{
  height: 60rpx;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eee;
  background: #fff;
  font-size: 26rpx;
  line-height: 60rpx;
  padding: 0 30rpx; 
  color: #999; 
}

.oper-block-value{
  float: right;
  color: #db6734;
  line-height: 60rpx;
  font-size: 24rpx;
}




/* packageA/pages/components/bottom-tabs/bottom-tabs.wxss */
@import '../../../../styles/iconfont.wxss';
.bottom-tabs{
   height: 120rpx;
    width: 100%;
    background: #fff;
    position: fixed;
    z-index: 9999;
    bottom: 0;
}

.bottom-tabs-main{
  width: 100%;
  height: 100%;
  background: #fff;
  padding: 16rpx 0;
  box-sizing: border-box;
}

.bottom-tabs-item{
  width: 25%;
  height: 100%;
  text-align: center;
  float: left;
}
.bottom-tabs-item .iconfont{
  font-size: 40rpx;
  color: #666;
}
.bottom-tabs-item .bottom-tabs-item-text{
  color: #666;
  font-size: 24rpx;
}

.bottom-tabs-item.active .iconfont{
  color: green;
}
.bottom-tabs-item.active .bottom-tabs-item-text {
