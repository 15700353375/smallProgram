.container{
  width: 100%;
  height: 100%;
  display: flex;  
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.bottom-tab{
  height: 120rpx;
  width: 100%;
  background: #eee;
  border-top: 2rpx solid #ddd;
  position: fixed;
  bottom: 0;
  z-index: 9999;
}
.top-tab{
  height: 80rpx;
  width: 100%;
  background: #f1f1f1;
  /* position: relative; */
  position: fixed;
  z-index: 9999;
  top: 0;
}

