/* packageA/pages/statistical/statistical.wxss */
page{
  background: #f1f1f1;
  width: 100%;
  height: 100%;
  display: flex;
}

.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.swiper-main{
  width: 100%;
  flex: 1;
  overflow-y: auto;
}

.bottom-tab{
  height: 80rpx;
  width: 100%;
  background: #eee;
  border-top: 2rpx solid #ddd;
}

.scroll-view_H{
  width: 100%;
  height: 80rpx;
  white-space: nowrap;
  border-bottom: 2rpx solid #c8c8c8;  
  background: #efeef3;
}

.scroll-view-item_H{
  width: 30%;
  height: 100%;
  display: inline-block;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #000;
}

.scroll-view-item_H.sv-item-on text{
  font-weight: 600;
  display: block;
  width: 100%;
  height: 76rpx;
  border-bottom: 4rpx solid #3b72f0;
}


.scroll-h{
  height: 100%;
}