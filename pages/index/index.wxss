/**app.wxss**/
page{
  background: #f1f1f1;
  width: 100%;
  height: 100%;
  display: flex;
}
.list-container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
} 

.list{
  height: 224rpx;
  width: 100%;
  padding: 12rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 20rpx;
}

.list image{
  width: 200rpx;
  height: 200rpx;
  float: left;
}

.list .list-body{
  /* float: left; */
  margin-left: 230rpx;
  height: 200rpx;
}
.list-item-title{
  line-height: 70rpx;
  font-size: 30rpx;
  color: #0a0a0a;
  font-weight: 600;
}

.list-item-address,.list-item-phone{
  font-size: 24rpx;
  line-height: 50rpx;
  height: 50rpx;
  overflow: hidden;
}

.list-item-address text{
  float: left;
  margin-right: 10rpx;
  color: #68d8c8;
}

.list-item-phone{
  margin-top: 8rpx;
  float: left;
  margin-right: 10rpx;
}

.list-item-phone text{
  color: #f55e31;
}