/**app.wxss**/
page{
  background: #f1f1f1;
  width: 100%;
  height: 100%;
  display: flex;
}
.list-container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
} 

.list{
  height: 200rpx;
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 20rpx;
}

.list image{
  width: 180rpx;
  height: 180rpx;
  float: left;
}

.list .list-body{
  float: left;
  margin-left: 20rpx;
}

.list-item-address,.list-item-phone{
  font-size: 24rpx;
  margin-top: 10rpx;
  line-height: 40rpx;
}

.list-item-address icon{
  margin-top: 8rpx;
  float: left;
  margin-right: 10rpx;
}

.list-item-phone{
  margin-top: 8rpx;
  float: left;
  margin-right: 10rpx;
}