/* pages/components/login/login.wxss */

.container{
  width: 100%;
  height: 100%;
  background: #f1f1f1;
}


.form-login{
  display: block;
  width: 100%;
  height: auto;
  padding-top: 30rpx;
}

.form-content{
  background: #fff;  
  border-bottom: 2rpx solid #ddd;
  border-top: 2rpx solid #ddd;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.form-login .section{
  width: 100%;
  height: 118rpx;
  position: relative;
}
.form-login .section:first-child{
  border-bottom: 2rpx solid #ddd;  
}

.section__title{
  float: left;
  width: 150rpx;
  font-size: 30rpx;
  color: #666;
  line-height: 118rpx;
  height: 118rpx;
}

.form-login .section input{
  height: 118rpx;
  line-height: 118rpx;
  font-size: 30rpx;
  width: 480rpx;
}
.form-login .section button::after{ border: none; }
.form-login .section .code{
  border: none;
  position: absolute;
  right: 20rpx;
  top: 26rpx;
  min-width: 120rpx;
  height: 70rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 70rpx;
  padding: 0 20rpx;
  z-index: 999;
  color: #3a98cc;
  background-color: #fff;
  border:2rpx solid #3a98cc;
}
.form-login .section .code.disabled{
  color: #c5c8ce;
  background-color: #f7f7f7;
  border:2rpx solid #dcdee2;
}

.clearPhone_main{
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  z-index: 9999;
  height:118rpx;
  width: 100rpx;
}

.clearPhone{
  margin-right: 30rpx;
  margin-top: 36rpx;
  float:right;
}










.login-btn{
  margin: 0 auto;
  width: 90%;
  height: 90rpx;
  background: #3a98cc;
  color: #fff;
  border: none;
  font-size: 38rpx;
  border-radius: 6rpx;
  line-height: 90rpx;
}