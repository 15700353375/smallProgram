/* pages/components/login/login.wxss */

.container{
  width: 100%;
  height: 100%;
  background: #f1f1f1;
}


.form-login{
  display: block;
  width: 100%;
  height: auto;
  padding-top: 30rpx;
}

.form-content{
  background: #fff;  
  border-bottom: 2rpx solid #ddd;
  border-top: 2rpx solid #ddd;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.form-login .section{
  width: 100%;
  height: 80rpx;
  position: relative;
}
.form-login .section:first-child{
  border-bottom: 2rpx solid #ddd;  
}

.section__title{
  float: left;
  width: 120rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 80rpx;
  height: 80rpx;
}

.form-login .section input{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
}
.form-login .section .code{
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  min-width: 120rpx;
  height: 60rpx;
  font-size: 22rpx;
  text-align: center;
  line-height: 60rpx;
  background: none;
  padding: 0 20rpx;
  z-index: 999;
  color: #3a98cc;
}
.form-login .section .code.disabled{
  color: rgba(0, 0, 0, 0.3);
}












.login-btn{
  margin: 0 auto;
  width: 90%;
  height: 80rpx;
  background: #3a98cc;
  color: #fff;
  border: none;
  border-radius: 6rpx;
}