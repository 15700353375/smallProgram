<!--pages/personal/personal.wxml-->
<view class='personal-container'>
  <view class='personal-info'>
    <view class='personal-img-box'>
      <image src='{{userInfo.avatarUrl}}'></image>
    </view>
    <view class='personal-content'>
      <view class='personal-name'>{{userInfo.nickName}}</view>
      <view class='personal-desc'>涨钟宝SASS小程序</view>
    </view>
  </view>

  <view class='funciton-content'>
    <view class='function-item'>
      <text class='iconfont icon-xiaoxi left-icon'></text>
      消息列表
      <text class='iconfont icon-jiantou'></text>
    </view>
    <view class='function-item'>
      <text class='iconfont icon-yijian1 left-icon'></text>
      意见反馈
      <text class='iconfont icon-jiantou'></text>
    </view>
    <view class='function-item'>
      <text class='iconfont icon-dangqianbanben left-icon'></text>
      当前版本
      <text class='right-vision'>v3.0.1</text>
    </view>
  </view>

  <view class='funciton-content'>
    <view class='function-item'>
      <text class='iconfont icon-shezhi left-icon'></text>
      关闭调试
      <text class='iconfont icon-jiantou'></text>
    </view>
  </view>

  <view class='bind-btn'>
    <button
    type="default"
    size="{{defaultSize}}"
    loading="{{loading}}"
    plain="{{plain}}"
    disabled="{{disabled}}"
    bindtap="newBind"
    hover-class="other-button-hover"
  >
    重新绑定
  </button>
  </view>


</view>
